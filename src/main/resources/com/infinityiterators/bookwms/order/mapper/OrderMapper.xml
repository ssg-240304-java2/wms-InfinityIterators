<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.infinityiterators.bookwms.order.mapper.OrderMapper">
    <insert id="insertOrder" parameterType="com.infinityiterators.bookwms.order.model.dto.OrderDTO">
        INSERT INTO tbl_order (user_id, order_date, status)
        VALUES (#{userId}, #{orderDate}, #{status})
    </insert>

    <select id="selectOrderById" resultType="com.infinityiterators.bookwms.order.model.dto.OrderDTO">
        SELECT order_id, user_id, order_date, status
        FROM tbl_order
        WHERE order_id = #{orderId}
    </select>

    <select id="selectAllOrders" resultType="com.infinityiterators.bookwms.order.model.dto.OrderDTO">
        SELECT order_id, user_id, order_date, status
        FROM tbl_order
    </select>

    <update id="updateOrder" parameterType="com.infinityiterators.bookwms.order.model.dto.OrderDTO">
        UPDATE tbl_order
        SET user_id = #{userId}, order_date = #{orderDate}, status = #{status}
        WHERE order_id = #{orderId}
    </update>

    <!-- 취소용 목록 조회 추가 라인-->
    <select id="selectAllOrder" resultType="com.infinityiterators.bookwms.order.model.dto.OrderDTO">
        SELECT order_id, user_id, order_date, status
        FROM tbl_order
    </select>
    <!--취소용 목록 조회 추가 라인-->

