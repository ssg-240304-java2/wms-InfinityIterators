<!--변경 전 라인-->
<!-- 변경 후 라인-->
    <delete id="deleteOrder" parameterType="_int">
        DELETE FROM tbl_order
        WHERE order_id = #{orderId}
    </delete>
<!-- 변경 후 라인-->
</mapper>
